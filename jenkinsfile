pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/foughali-wejdene/PayeTonKawa.git'
            }
        }
        stage('Build') {
            steps {
                sh 'flutter packages get'
                sh 'flutter build apk --release'
            }
        }
        stage('Test') {
            steps {
                sh 'flutter test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'scp -r build/app/outputs/flutter-apk user@my-server:/path/to/deploy'
            }
        }
    }
}
